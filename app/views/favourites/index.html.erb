<%= @previous_page = (params[:page].to_i - 1).to_s %>
<%= @next_page = (params[:page].to_i + 1).to_s %>
<%= link_to "previous",
  favourites_previous_path(page: @previous_page,  per_page: params[:per_page]),
  controller: :favourites, action: :previous %>

<%= link_to "next",
  favourites_next_path(page: @next_page, per_page: params[:per_page]),
  controller: :favourites, action: :next %>
<%= form_tag(favourites_path, method: :put) do %>
  <% numbers = session[:numbers] %>
  <% for number in numbers %>
    <ul>
      <li>
        <%= check_box_tag 'favourite_numbers[]', number, checked: true %>
        <%= number %>
      </li>
    </ul>
  <% end %>
<%= submit_tag 'Mark as favourite' %>
<% end %>
<br>

<%= link_to 'New Favourite', new_favourite_path %>
