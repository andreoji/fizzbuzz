<%= previous_page = (params[:page].to_i - 1).to_s %>
<%= next_page = (params[:page].to_i + 1).to_s %>
<%= link_to_if(params[:page].to_i > 1, 'previous',
                               favourites_path(page: previous_page,
                                               per_page: params[:per_page],
                                               pagination: 'previous')) %>

<%= link_to 'next',
  favourites_path(page: next_page,
                  per_page: params[:per_page],
                  pagination: 'next') %>
<%= form_tag(favourites_path, method: :put) do %>
  <% @fizzbuzzes %>
  <% for fizzbuzz in @fizzbuzzes %>
    <ul>
      <li>
        <%= check_box_tag 'favourite_numbers[]', fizzbuzz[:number], fizzbuzz[:fave] %>
        <%= fizzbuzz[:number] %>
        <%= fizzbuzz[:value] %>
        <%= fizzbuzz[:fave].class %>
      </li>
    </ul>
  <% end %>
<%= submit_tag 'Mark as favourite' %>
<% end %>
<br>

<%= link_to 'New Favourite', new_favourite_path %>
